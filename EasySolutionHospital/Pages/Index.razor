@page "/"

@attribute [Authorize]

<MudItem>
    <AuthorizeView Roles="@(UserRoleType.Administrator.ToString())">
        <Authorized>
            <EasySolutionHospital.Pages.Administrator.AdministratorHomePage />
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Roles="@(UserRoleType.Admin.ToString())">
        <Authorized>
            <EasySolutionHospital.Pages.Admin.AdminHomePage />
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Roles="@(UserRoleType.User.ToString())">
        <Authorized>
            <EasySolutionHospital.Pages.User.UserHomePage />
        </Authorized>
    </AuthorizeView>
</MudItem>