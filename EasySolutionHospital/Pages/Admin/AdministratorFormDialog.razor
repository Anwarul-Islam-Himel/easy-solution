<MudDialog>
    <DialogContent>
        <EditForm Model="@Model" OnValidSubmit="Submit">
            <DataAnnotationsValidator />
            <MudGrid>
                <MudItem xs="6">
                    <MudTextField @bind-Value="Model.FirstName" Label="First Name" For="(() => Model.FirstName)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="Model.LastName" Label="Last Name" For="(() => Model.LastName)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Address" Label="Address" For="(() => Model.Address)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
                </MudItem>
                <MudItem xs="7">
                    <MudTextField @bind-Value="Model.Phone" Label="Phone Number" For="(() => Model.Phone)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
                </MudItem>
                <MudItem xs="5">
                    <MudDatePicker Date="Model.DateOfBirth" Label="Date of Birth" Placeholder="Select Date" Variant="Variant.Outlined" Margin="Margin.Dense"></MudDatePicker>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Email" Label="Email" For="(() => Model.Email)" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
                </MudItem>
            </MudGrid>
            <div class="mt-4 d-flex gap-2 justify-end">
                <MudButton Class="form-cancel-btn" Color="Color.Primary" Variant="Variant.Outlined" OnClick="Cancel">Cancel</MudButton>
                <MudButton Class="form-submit-btn" Color="Color.Primary" Variant="Variant.Filled" ButtonType="ButtonType.Submit">Save</MudButton>
            </div>
        </EditForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public AdministratorsViewModel Model { get; set; } = new();

    void Submit() => MudDialog.Close(DialogResult.Ok(Model));

    void Cancel() => MudDialog.Cancel();
}
