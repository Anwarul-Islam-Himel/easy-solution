﻿<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" OnClick="Cancel">@CancelButtonText</MudButton>
        <MudButton Color="ButtonColor" Variant="Variant.Filled" OnClick="Submit">@SubmitButtonText</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public string ContentText { get; set; } = string.Empty;
    [Parameter]
    public string SubmitButtonText { get; set; } = "Submit";
    [Parameter]
    public string CancelButtonText { get; set; } = "Cancel";
    [Parameter]
    public Color ButtonColor { get; set; } = Color.Error;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));

    void Cancel() => MudDialog.Cancel();
}
